<section class="home" id="home">
  <div class="home__left">
    <h1 class="home__h1">
      Hi! I’m Alex Boczek. Full-stack Developer From Poland.
    </h1>
    <p class="home__text">
      Full-stack developer (she / her) with over three years of programming
      experience. I worked commercially as a freelance JS and PHP developer for
      14 months before transitioning to full-stack JavaScript, which has been my
      focus for the past year. Based in Gliwice, I’m open to local or remote
      work, as well as relocation.
    </p>
    <div class="home__left-bottom-container">
      <button type="button" class="home__btn">Portfolio</button>
      <div class="home__contact-container">
        <a href="mailto:kontakt@alexboczek.pl" class="home__contact-email"
          >E-mail: kontakt@alexboczek.pl</a
        >
        <a href="tel:+48720432964" class="home__contact-phone"
          >Phone: +48 720-432-964</a
        >
      </div>
    </div>
  </div>
  <img class="home__right" src="/Alex_Boczek.webp" alt="Alex Boczek Photo" />
</section>

<style lang="scss">
  @import "../styles/variables.scss";

  //   TODO: remember about this linear-gradient text trick

  .home {
    max-width: 1170px;
    width: 100%;
    display: flex;
    align-items: center;
    margin-top: 3.125rem; // 50px

    overflow: hidden;

    .home__left {
      display: flex;
      flex-direction: column;
      justify-content: center;
      // margin-left: 3.125rem; // 50px
      h1 {
        font-size: $fontsize-h1-62px;
        background: $main-gradient;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        line-height: 75px;
        margin-top: 0;
      }
      .home__text {
        width: 34.625rem; // 554px;
        font-size: $fontsize-hero-btntext-20px;
        font-weight: 400;
        line-height: 1.4;
      }

      .home__left-bottom-container {
        display: flex;
        align-items: center;
        margin-top: 1.875rem; // 30px
        .home__btn {
          color: $color-white;
          background-color: $color-red;
          border: none;
          font-weight: 700;
          font-size: $fontsize-hero-btntext-20px;
          padding: 22px 30px;

          transition:
            background-color 0.3s ease,
            transform 0.3s ease;

          &:hover {
            background-color: $color-orange;
            cursor: pointer;
            transform: translateY(-4px);
          }
        }

        .home__contact-container {
          display: flex;
          flex-direction: column;
          margin-left: 3.125rem; // 50px

          .home__contact-email {
            color: $color-orange;
            text-decoration: none;
            font-size: $fontsize-hero-btntext-20px;
            font-weight: 500;
            transition: color 0.3s ease;

            &:hover {
              color: $color-white;
            }
          }

          .home__contact-phone {
            color: $color-orange;
            text-decoration: none;
            font-size: $fontsize-hero-btntext-20px;
            font-weight: 500;
            transition: color 0.3s ease;

            &:hover {
              color: $color-white;
            }
          }
        }
      }
    }

    .home__right {
      width: auto;
      height: 32.746875rem; // 523.95px;
      object-fit: contain;
      border: solid 2px $color-white;
      object-fit: cover;
      margin-right: 3.125rem; // 50px
    }
  }
</style>
