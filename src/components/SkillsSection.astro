<section class="skills" id="my-skills">
  <!-- Add blur effect in Skill section -->
  <img
    src="/blur/skills_up_left.png"
    alt="blur effect"
    class="skills__blur-left-top"
  />
  <img
    src="/blur/skills_down_right.png"
    alt="blur effect"
    class="skills__blur-right-down"
  />

  <div class="skills__top">
    <h3 class="skills__h3">My Programming Skills</h3>
    <p class="skills__mini-text">Ready to learn new technologies.</p>
  </div>
  <div class="skills__bottom">
    <!-- Front-End -->
    <div class="skills__bottom-single">
      <div class="skills__bottom-line"></div>
      <h4 class="skills__h4">Front-end Skills</h4>
      <p class="skills__h4-paragraph">
        JavaScript, TypeScript, React, Astro,<br />HTML5, CSS3, SCSS,
        <br />
        Vite, Vitest / Jest, NPM.
      </p>
    </div>

    <!-- Front-End -->
    <div class="skills__bottom-single">
      <div class="skills__bottom-line"></div>
      <h4 class="skills__h4">Back-end Skills</h4>
      <p class="skills__h4-paragraph">
        Node.js, Express, PostgreSQL, MariaDB,<br />Netlify, Linux, DecapCMS.
      </p>
    </div>

    <!-- Front-End -->
    <div class="skills__bottom-single">
      <div class="skills__bottom-line"></div>
      <h4 class="skills__h4">Other Skills</h4>
      <p class="skills__h4-paragraph">
        English and Polish at a communicative level.<br />Basics of UI / UX
        design (Figma, Photoshop).<br />Git, GitHub.
      </p>
    </div>
  </div>
</section>

<style lang="scss">
  @import "../styles/variables.scss";

  .skills {
    max-width: 1170px;
    width: 100%;
    height: 695px;
    background-color: $color-blue-medium;
    display: flex;
    flex-direction: column;
    justify-content: center;
    position: relative;

    @media (max-width: 1024px) {
      align-items: center;
    }

    .skills__blur-left-top {
      position: absolute;
      top: 0;
      left: 0;
      z-index: 1;
      opacity: 0.7;
    }

    .skills__blur-right-down {
      position: absolute;
      bottom: 0;
      right: 0;
      z-index: 1;
      opacity: 0.4;
    }

    &__top {
      display: flex;
      justify-content: space-between;
      align-items: center;

      @media (max-width: 1024px) {
        flex-direction: column;
        justify-content: center;
      }
      .skills__h3 {
        margin-left: 3.125rem; // 50px
        font-weight: 800;
        height: 100%;
        font-size: $fontsize-h2-34px;
        background: $main-gradient;
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;

        @media (max-width: 1024px) {
          margin-left: 0;
          text-align: center;
        }
      }

      .skills__mini-text {
        margin-right: 3.125rem; // 50px
        color: $color-white;
        font-size: $fontsize-text-16px;
        font-weight: 500;

        @media (max-width: 1024px) {
          margin-right: 0;
        }
      }
    }

    &__bottom {
      margin-top: 9.375rem; // 150px
      display: flex;
      justify-content: space-between;
      padding: 0 3.125rem;

      @media (max-width: 1024px) {
        flex-direction: column;
        justify-content: center;
        align-items: center;
        margin-top: 1rem; // 100px
      }

      @media (max-width: 620px) {
        padding: 0;
        text-align: center;
        justify-content: center;
        align-items: center;
      }
      .skills__bottom-single {
        width: 22rem; // 352px

        @media (max-width: 1024px) {
          display: flex;
          flex-direction: column;
          align-items: center;
          justify-content: center;
          margin-top: 2rem;
        }

        .skills__bottom-line {
          background: $main-gradient;
          width: 2.375rem; // 38px
          height: 3px;
          margin-bottom: -1rem;
        }

        .skills__h4 {
          font-size: $fontsize-portfolio-h3-25px;
          font-weight: 800;
        }

        .skills__h4-paragraph {
          color: $color-orange;
          font-size: $fontsize-text-16px;
          font-weight: 500;
          line-height: 1.5;
        }
      }
    }
  }
</style>
